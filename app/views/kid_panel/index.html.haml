= alert

.well.col-md-2
  %p My total points:
  = user.decorate.show_total_score

%table.table.table-condensed
  %thead
    %tr
      %th= 'Event name'
      %th= 'Description'
      %th= 'Points'
  %tbody
    - events.each do |e|
      %tr
        %td= e.name
        %td= e.description
        %td= e.points
