!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Team Ontario'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Team Ontario'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{:href => "//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css", :rel => "stylesheet"}/
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"}
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
